{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/libs/components/src/index.ts"],
      "@components/*": ["src/libs/components/src/*"],
      "@configs": ["src/libs/configs/src/index.ts"],
      "@configs/*": ["src/libs/configs/src/*"],
      "@datasets": ["src/datasets/index.ts"],
      "@hooks": ["src/libs/hooks/src/index.ts"],
      "@hooks/*": ["src/libs/hooks/src/*"],
      "@ts": ["src/libs/types/index.ts"],
      "@ts/*": ["src/libs/types/*"],
      "src/*": ["src/apps/chat/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
